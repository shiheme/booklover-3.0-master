/* index/component/item.wxss */
@import "../../../app.wxss";

.librarywrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}


.librarywrap .head .close.btn {
  width: 88rpx;
  position: relative;
  z-index: 10;
  display: flex;
  justify-content: space-around;
  align-items: center;
  overflow: hidden;
  margin-left: 30rpx;
}

.librarywrap .head .close.btn .icon {
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  position: relative;
  z-index: 15;
  overflow: visible;
  font-size: 1.4rem;
}

.librarywrap .head .title {
  width: 100%;
  font-size: 34rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  opacity: 1;
  position: absolute;
  left: 0rpx;
  top: 0;
  z-index: 5;
  display: flex;
  align-items: center;
  transition: 1s;
}

.librarywrap .head .title .text {
  margin-left: 160rpx;
}


.librarywrap .body {
  height: 0;
  /* 充满剩余空间 */
  flex-grow: 1;
}

/* POPUP弹层 */

.popupbg {
  position: fixed;
  left: 0;
  bottom: -100%;
  width: 100%;
  height: 100%;
  z-index: 105;
  background: rgba(0, 0, 0, 0.5);
}

.popupbg.show {
  bottom: 0;
}

.popuparea {
  position: fixed;
  z-index: 110;
  width: 100%;
  bottom: 0;
  transform: translateY(110%);
  padding-bottom: calc(env(safe-area-inset-bottom));
  transition-duration: 0.3s;
  /* transition-delay: 0.3s; */
  /* backface-visibility: hidden; */
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.popuparea.show {
  transition-duration: 0.3s;
  transform: translateY(0);
  /* transition-delay: 0.3s; */
}

.popuparea .popupareahead {
  position: relative;
}

.popuparea .popupareafoot {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid rgba(123, 123, 123, .2);
  padding-bottom: calc(env(safe-area-inset-bottom));
}

.popuparea .popupareafoot .btn {
  flex: 50%;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.popuparea .popupareafoot .btn.sumbit {
  margin-left: 10rpx;
  border-left: 1rpx solid rgba(123, 123, 123, .2);
}

.popuparea .popupareafoot .text {
  font-size: 34rpx;
}

/* 首页加号弹层 */
.indexnav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 0;
}

.indexnav .card-cell {
  /* width: 33%; */
}

.indexnav .card-cell .card-cell-msg {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.indexnav .card-cell-msg {
  border-top: none !important;
}

.indexnav .card-cell-msg .icon {
