  -webkit-line-clamp: 1;
}

.cmtcell .cmtheader .starrate {
  width: 220rpx;
}

.cmtcell .cmtheader .starrate .icon {
  transform: scale(1.5);
  transform-origin: 0 50%;
  margin-left: 20rpx;
}

.cmtcell .cmtheader .basemsg .name {
  font-size: 30rpx;
  font-weight: 500;
  line-height: 40rpx;
