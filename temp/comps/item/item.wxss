}

.cmtcell .cmtheader .basemsg .name {
  font-size: 32rpx;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.cmtcell .cmtheader .starrate {
  width: 220rpx;
}

.cmtcell .cmtheader .starrate .icon {
