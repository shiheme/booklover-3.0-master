@import "../../../app.wxss";

.wrap {
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

.libmsg {
  margin-top: 100rpx;
}

.imagecover {
  position: relative;
  margin: 0rpx auto;
  border-radius: 5rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%;
  background-color: rgba(120, 120, 120, 0.1);
  box-shadow: 2px 2px 20px rgba(0, 0, 0, 0.1);
  width: 120rpx;
  height: 168rpx;
}

.libtitle {
  font-size: 36rpx;
  font-weight: bold;
  opacity: .8;
  margin: 30rpx 60rpx 0 60rpx;
  line-height: 60rpx;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: center;
}

.libisbn {
  font-size: 28rpx;
  opacity: .6;
  margin: 0 60rpx;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-align: center;
}

.card {
  margin: 50rpx;
  padding: 0 40rpx;
}

.tips {
  margin: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.tips .text {
  opacity: .8;
  display: block;
}

.important {
  padding: 0 20rpx 20rpx;
  text-align: center;
  opacity: .6;
  font-size: 24rpx;
}

.videolookarea {}

.hidecnt {
  padding: 40rpx 0;
  line-height: 55rpx;
}

.hidecntbtn {
  display: flex;
  text-align: center;
  align-items: center;
  flex-flow: column;
  padding: 40rpx;
  position: relative;
}

.hidecntbtn .button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border: none !important;
  opacity: 0;
  z-index: 15;
}

.hidecntbtn .icon {
  width: 60rpx;
  height: 60rpx;
}