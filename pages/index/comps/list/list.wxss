/* index/component/list.wxss */
@import "../../../../app.wxss";

.listwrap {
  height: 100%;
}
.itemwrap {
  margin-top: 80rpx;
}

.cateswrap {
  margin-top: 80rpx;
}

.cates {}

.cateilist:first-child {
  margin-left: 50rpx;
}

.cateilist:last-child {
  margin-right: 50rpx;
}

.cateilist {
  display: inline-block;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 20rpx 40rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.cateilist .text {
  opacity: .6;
}

.user-items {
  padding: 0 30rpx;
}

.user-information {
  padding: 0 50rpx;
  margin-bottom: 60rpx;
  margin-top: 60rpx;
  height: 132rpx;
}

.user-information .card-cell-icon {
  width: 132rpx;
  height: 132rpx;
  margin-right: 24rpx;
}

.user-information .card-cell-icon .image {
  width: 132rpx;
  height: 132rpx;
  opacity: 1;
}

.user-information .card-cell-msg {
  padding: 10rpx 0;
}

.user-information .card-cell-base {
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  flex: 1;
}

.user-information .card-cell-base .card-cell-title {
  font-size: 42rpx;
  opacity: 1;
}

.user-information .card-cell-base .card-cell-label {
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  opacity: 1;
  border-radius: 50rpx;
}

.usernav .card-cell .card-cell-msg {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.usernav .card-cell {
  /* width: 33%; */
}

.usernav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
}

.usernav.nouser {
  font-size: 40rpx;
}

.usernav.nouser .card-title {
  display: flex;
  justify-content: center;
  align-self: center;
}

.usernav.nouser .button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  opacity: 0;
}

.usernav .card-cell-msg {
  border-top: none !important;
}

.usernav .card-cell-base {
  padding: 0 40rpx;
  align-items: center;
}

.usernav .card-cell-more .text {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-top: 20rpx;
}